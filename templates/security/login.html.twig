{% extends 'base.html.twig' %}

{% block title %}Sign in{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="row mt-3 d-flex justify-content-center">
            <div class="col-12 col-md-3">
                <div class="form-group">
                    <label for="inputEmail" class="sr-only">El. pašto adresas</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="El. paštas" required autofocus>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="sr-only">Slaptažodis</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Slaptažodis" required>
                </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="remember-me" name="_remember_me" />
                    <label class="form-check-label" for="remember-me">Įsiminti</label>
                </div>

                <button class="btn btn-danger" type="submit">Prisijungti</button>
            </div>
        </div>

    </form>
{% endblock %}

{% block javascripts %}{% endblock %}